<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:visibility="visible"
    tools:context=".MapsActivity">


    <fragment
        android:id="@+id/mapa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="811dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-80dp" />

    <Button
        android:id="@+id/BT_percurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_sair"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#85FFFFFF"
        android:icon="@drawable/ic_favoritos"
        android:text="Percurso"
        android:textAllCaps="false"
        android:textColorLink="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/BT_gravar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BT_percurso"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/BT_percurso"
        android:backgroundTint="#85FFFFFF"
        android:text="Gravar Posição"
        android:textAllCaps="false"
        android:icon="@drawable/ic_add_location"
        android:textSize="12sp" />

    <Button
        android:id="@+id/BT_Configurar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BT_gravar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/BT_gravar"
        android:backgroundTint="#85FFFFFF"
        android:icon="@drawable/ic_baseline_settings_24"
        android:text="Configurar"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/tx_sair"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/BT_Configurar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#85FFFFFF"
        android:src="@android:drawable/ic_lock_power_off"
        android:tint="#E80E0E" />

    <ImageButton
        android:id="@+id/BT_SeuLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="36dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:tint="#0E0E0E" />


</RelativeLayout>